@*modals*@

<div class="modal fade" id="addProjectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-4">
                <h5 class="modal-title mb-3" id="addProjectModalLabel">Add New Project</h5>
                <form action="" method="post">
                    <div>
                        <label for="" class="form-label">Project Name</label>
                        <input class="form-control border border-2 border-primary" type="text" name="projectName">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Default Template</label>
                        <select class="form-select border border-2 border-primary">
                            <option selected>List</option>
                            <option>Board</option>
                            <option>Calendar</option>
                            <option>Gantt</option>
                            <option>Timesheet</option>
                        </select>
                        <div class="mb-3">
                            <label for="" class="form-label">
                                Project status
                            </label>
                            <div class="checker"><span class=""><input type="radio" name="statusorigin"><label for="" class="form-label">Inherit from workspace</label></span></div>
                            <div class="checker"><span class=""><input type="radio" name="statusorigin"><label for="" class="form-label">Custom Status</label></span></div>
                            <div class="mb-3" id="customStatusModal">
                                <p class="form-label">Active Statuses</p>
                                <div class="active-statuses">
                                    <div class="status mb-2 p-1 d-flex gap-2 border border-2 border-primary align-items-center rounded-3">
                                        <div class="marker"></div>
                                        <p class="m-0">To Do</p>
                                    </div>
                                    <div class="status mb-2 p-1 d-flex gap-2 border border-2 border-primary align-items-center rounded-3">
                                        <div class="marker" style="background-color: #FD7A7A;"></div>
                                        <p class="m-0">Pending</p>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary rounded-3 mb-3">+ Add Status</button>
                                <p class="form-label">Closed Status</p>
                                <div class="status mb-2 p-1 d-flex gap-2 border border-2 border-primary align-items-center rounded-3">
                                    <div class="marker" style="background-color: #4BBC5D;"></div>
                                    <p class="m-0">Completed</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary d-block mx-auto px-5 rounded">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addMemberModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body p-4">
                <h5 class="modal-title mb-3" id="addMemberModalLabel">Add New Members</h5>
                <form action="" method="post">
                    <div>
                        <label for="" class="form-label">Members</label>
                        <select data-placeholder="Select members..." class="chosen-select" multiple="" tabindex="-1" style="display:none">
                            <option value=""></option>
                            <option value="User E">User E</option>
                            <option value="User F">User F</option>
                            <option value="User G">User G</option>
                            <option value="User H">User H</option>
                        </select>

                    </div>
                    <button type="button" class="btn btn-primary d-block mt-3 mx-auto px-5 rounded">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".chosen-select").chosen({
                width: "100%"
            });

            $(".chosen-container-multi .chosen-choices").css({
                "border": "1px solid var(--primary-color)",
                "border-radius": "7px",
                "box-shadow": "none",
                "background": 'url("/assets/icons/arrowblue.svg") no-repeat 0px 2px)'
            });

            $(".chosen-container-multi ul.chosen-choices li.search-choice").css({
                "background-color": "white",
                "border": "1px solid var(--primary-color)",
                "border-radius": "7px"
            });
        });
    </script>
}