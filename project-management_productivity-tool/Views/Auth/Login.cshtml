@{
    Layout = "";
    ViewData["Title"] = "Login";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/constants.css">
    <link rel="stylesheet" href="~/css/colors.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
      <div class="row inner-body">
        <div class="col-sm  p-5 d-flex flex-column justify-content-between">
          <img width="100" src="~/assets/icons/logo.svg">
          <h1>Login</h1>
          <form action="">
              <div class="col-md-4 w-100">
                <div class="form-group email-group">
                  <div class="label-style">
                    <label class='email'>Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email">
                  </div>
                </div>
                <div class="form-group email-group mt-3">
                  <div class="label-style">
                    <label class='password'>Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password">
                  </div>
                </div>
                <div class="forgot-password mt-3 mb-3"><a href="">Forgot Password?</a></div>
                <button type="submit" class="btn btn-primary rounded submit-button ">Submit</button>
              </div>
          </form>
          <div class="strike mt-4 mb-4">
            <span>OR</span>
          </div>
          <form action="">
            <button type="submit" class="btn btn-primary rounded submit-button login-google">
              <span>Login with google</span>
            </button>
          </form>
          <div class="sign-up text-center mt-3">
            Don’t have a SwiftX account? &nbsp; <a href="">Sign Up Now</a>
          </div>
        </div>

        <div class="col-sm frame">
            <img src="~/assets/img/loginImage.svg">
        </div>
    </div>
</body>
</html>
